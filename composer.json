{
  "name": "spikkl/spikkl-php-client",
  "description": "Spikkl API client library for PHP",
  "keywords": [
    "spikkl",
    "service",
    "validation",
    "postal code",
    "postcode",
    "address validation",
    "postcode api",
    "api",
    "client"
  ],
  "homepage": "https://www.spikkl.nl/documentation",
  "license": "BSD-2-Clause",
  "authors": [
    {
      "name": "Spikkl",
      "email": "support@spikkl.nl"
    }
  ],
  "require": {
    "php": "^7.2 | ^8.0",
    "ext-curl": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.3 || ^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5 || ^7.1 || ^8.1"
  },
  "suggest": {
    "spikkl/spikkl-php-laravel-client": "Use the Laravel wrapper for an even smoother experience."
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Spikkl\\Api\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spikkl\\Api\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit tests"
  }
}